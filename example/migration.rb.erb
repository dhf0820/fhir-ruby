create_table 'fhir.<%= el.table_name %>' do |t|
<% el.columns.each do |col| -%>
  t.<%= col.type %> :<%= col.name %>
<% end -%>

<% el.references.each do |ref| -%>
  t.references :<%= ref.name %><%- if ref.polymorphic %>, polymorphic: true <% end %>
<% end -%>
end

<% el.references.select { |r| !r.polymorphic }.each do |ref| -%>
add_foreign_key 'fhir.<%= el.table_name %>', 'fhir.<%= ref.table_name %>', column_name: '<%= ref.name %>_id'
<% end %>
